doctype html
html(lang="en")
    head
        style
            include style.css
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script( src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer)
        script( src="/socket.io/socket.io.js" defer)
        script( src="p2p.js" )
        script( src="logic_exponent.js" defer)
        script( src="/jquery/jquery.min.js" defer)
        script( src="/bootstrap/js/bootstrap.js" defer)
        script( src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous")
        link( rel="stylesheet" href="/bootstrap/css/bootstrap.css" defer)

        script.
            const ROOM_ID = !{roomId};
        title Document
    body
        .container
            .row.justify-content-center
                .col-md-12.text-center
                    h1 SALA DE VIDEO CONFERENCIA 
                    //-- VIEWER VIDEO ---
                .row.col-md-12.justify-content-center
                    .row.col-md-8
                            p.mb-0.text-primary Mi ID:  
                            p.mb-0.text-primary#displayId
                    
                    .col-md-8.p-0.card.bg-light
                        #video-grid
                            video(id="lVideo" autoplay="autoplay")
                            video(id="rVideo" autoplay="autoplay")
                        .col Transmision en vivo: 
                    //-.col-md-4
                        .card(style="max-width: 18rem;")
                            #videoWebRTC.card-img-top
                            .card-body
                                .card-title usuario
                            
                    //------ CHAT -------
                    .col-md-4
                        #chat.list-group
                            div(class="list-group-item active") CHAT
                            div(class="list-group-item" style="height:200px" )
                                #messages-container
                                ul#messages.list-group
                        .input-group
                            input( id="msg-chat" type="text" class="form-control"  placeholder="Escribe un mensaje..." aria-label="Recipient's username" aria-describedby="basic-addon2")
                            .input-group-append
                                button( id="btn-send-msg" type="button" class="btn btn-outline-secondary") ENVIAR

                        
                        .input-group.mt-5
                            input( id="connId" type="text" class="form-control"  placeholder="ID de invitado" aria-label="Recipient's username" aria-describedby="basic-addon2")
                            .input-group-append
                                button( id="conn_button" type="button" class="btn btn-outline-secondary") Conectar
                            .input-group-append
                                button( id="call_button" type="button" class="btn btn-outline-secondary") Llamar
                button( id="start-share-scream" type="button" class="btn btn-outline-secondary") Compartir pantalla
                button( id="stop-share-scream" type="button" class="btn btn-outline-secondary") Detener compartir

                        #connected_peer
                .col-md-12
                    h5 Usuarios conectados  
                    ul.list-group#users-connect

                .col-md-12
                    .col-md-4
                        button( id="launcher" type="button" class="btn btn-outline-secondary") publicar
